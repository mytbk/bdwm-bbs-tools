#!/bin/bash

loop(){
	local TIMES="$1"
	shift
	for i in $(seq 1 $TIMES)
	do
		eval "$@"
	done
}
export -f loop

ssh_ver(){
    ssh -V 2>&1|cut -d',' -f1
}
export -f ssh_ver

os_rel(){
    source /etc/os-release
    local ESC
    if [ -n "$1" ]; then
        ESC='\033\033'
    else
        ESC='\033'
    fi
    printf "${ESC}[${ANSI_COLOR}m${PRETTY_NAME}${ESC}[0m"
}
export -f os_rel

tail_qmd(){
    printf '\n--\n'
    printf '%s (%s)\n' "$(ssh_ver)" "$(os_rel 1)"
}
export -f tail_qmd

# direction keys
pgup(){
	printf '\033[5~'
}

pgdn(){
	printf '\033[6~'
}

keyr(){
	printf '\033[C'
}
keyl(){
	printf '\033[D'
}
keyup(){
	printf '\033[A'
}
keydown(){
	printf '\033[B'
}
export -f pgup pgdn keyl keyr keyup keydown

# BBS functions
switch(){
	printf 's%s\n' "$1"
}

view(){
	printf 's\n%s\n' "$1"
}

p(){
	printf 'k'
}

n(){
	printf 'j'
}

q(){
	printf 'q'
}

last(){
	printf '$'
}

enter(){
	printf '\n'
}

reenter(){
	printf 'q\n\n'
}

redraw(){
	printf '\014'
}

post(){
	printf '\020'
	if [ -n "$1" ]; then
		iconv -c -t gbk <<< "$1"
	fi
}

clear(){
	printf '\023\033m1\n\024\033m2\n\033d'
}

write(){
	iconv -c -t gbk
}

save(){
	printf 'save?(y/n) ' 1>&2
	read ans
	if [ "$ans" = "y" ]; then
		printf '\027l\n'
	fi
}

bye(){
	printf '!\n\n'
}
export -f switch view p n q last enter reenter bye 
export -f redraw post clear write save

# for board managers
merge(){
	printf 'b1\n7\ny\n\n\n'
}

subdel(){
	printf 'b1\n1\ny\n\n'
}

ban(){
	printf '\004'
}
export -f merge subdel ban

# ctrl-a to ctrl-z
i=1
for alpha in {a..z}
do
	funcname=c${alpha}
	octcode=$(printf '%03o' $i)
	eval "${funcname}(){
		printf '\\${octcode}'
	}"
	i=$(($i+1))
	export -f ${funcname}
done

/usr/bin/env PS1='(bbs)' bash --norc > $1

